"""
Given mined mistakes, determines the edit distance and inserts it into the
database.
"""

import sqlite3

from tqdm import tqdm
from sensibility.evaluation.mistakes import Mistakes, Mistake
from sensibility.evaluation.distance import tokenwise_distance
from sensibility._paths import MISTAKE_FILE

conn = sqlite3.connect(str(MISTAKE_FILE))
# Make writes super speedy by disregarding durability.
conn.execute('PRAGMA synchronous = OFF')

mistakes = Mistakes(conn)
for mistake in tqdm(mistakes):
    dist = tokenwise_distance(mistake.before, mistake.after)
    mistakes.insert_distance(mistake, dist)
