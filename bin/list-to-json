"""
Prints each line as an entry in a JSON array. Skips blanks.

Usage:
    list-to-json <list.txt > list.json

Potential use case:

Create a JSON version of a vocabulary collected from several partial
vocabularies as line-seperated files.

    cat partial-vocabulary-*.txt | sort -u | list-to-json > vocabulary.json
"""

import sys
import json


if __name__ == '__main__':
    def lines():
        for line in sys.stdin:
            line = line.strip()
            if line != '':
                yield line
    json.dump(tuple(lines()), sys.stdout)
