#!/usr/bin/env python3
# -*- coding: UTF-8 -*-

"""
Checks if stdin is syntatically-valid Python 3.6 source code. Returns non-zero otherwise.
"""

import sys

import sensibility.language.python


if __name__ == '__main__':
    language = sensibility.language.python.Python()
    with open(sys.stdin.fileno(), 'rb') as input_file:
        if language.check_syntax(input_file.read()):
            exit(0)
        else:
            exit(1)
