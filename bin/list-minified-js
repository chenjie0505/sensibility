# Prints the ratio and path names of files that have been marked as minified
# in the database.
#
# Usage:
#       list-minified-js > minified.csv

set -e

sqlite3 -separator "$(printf "\t")" ./evaluation/javascript-sources.sqlite3 <<'SQL'
    SELECT n_tokens / sloc as ratio, hash, path
      FROM failure JOIN source_summary USING (hash)
                   JOIN repository_source USING (hash)
     WHERE reason LIKE 'minified%';
SQL
