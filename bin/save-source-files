import sys
from pathlib import Path

from sensibility._paths import REPOSITORY_ROOT
from sensibility.language import language
from sensibility.miner.connection import get_sqlite3_connection
from sensibility.miner.util import create_query_table

output_dir = Path(sys.argv[1])
print("saving files to ", output_dir, file=sys.stderr)
output_dir.mkdir(parents=True, exist_ok=True)

# Ingest all the hashes.
conn = get_sqlite3_connection()
create_query_table(conn)

cursor = conn.execute('''
    SELECT hash, source FROM source_file NATURAL JOIN query_hash
''')

# Get any file extension, minus nay preceeding dots.
extension = next(iter(language.extensions)).lstrip('.')

for filehash, source in cursor:
    with open(output_dir / f'{filehash}.{extension}', 'wb') as output_file:
        output_file.write(source)
