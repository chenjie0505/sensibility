"""
Evaluates the performance of the detecting and fixing syntax errors.
"""

import argparse

from sensibility.evaluation.evaluate import Evaluation, LSTMPartition, fetch_mistakes
from sensibility._paths import get_evaluation_dir

parser = argparse.ArgumentParser()
parser.add_argument('partition', type=int, default=None)
#parser.add_argument('--mistakes', action='store_const', const='mistake')
#parser.add_argument('--mutants', action='store_const', const='mutants')

args = parser.parse_args()
filename = get_evaluation_dir() / f'results-mistakes-{args.partition}.csv'
evaluation = Evaluation('mistakes', LSTMPartition(args.partition))
with open(filename, 'w') as csvfile:
    evaluation.evaluate(fetch_mistakes(), csvfile)
